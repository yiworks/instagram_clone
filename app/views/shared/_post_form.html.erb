<h2 class="new-post-title"><%= yield :title %></h2>
<%= form_with(model: @post, local: true, url: choose_new_or_edit) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <span class="photo">
    <%= f.file_field :photo, id: :post_photo, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
  <div class="field">
    <%= f.text_area :content, id: :post_content, placeholder: "コメントを入力" %>
  </div>
  <%= f.submit "送信", class: "btn btn-primary" %>
<% end %>

<script type="text/javascript">
  $('#post_photo').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Plese choose a smaller file.');
    }
  });
</script>
