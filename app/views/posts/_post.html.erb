<li id="post-<%= post.id %>">
  <div class="post-header">
    <% if post.user.avatar.present? %>
      <%= image_tag post.user.avatar.thumb.url ,alt: post.user.name, class: "avatar" %>
    <% else %>
      <%= image_tag 'avatar_thumb.png', alt: post.user.name, class: "avatar" %>
    <% end %>
    <span class="user"><%= link_to post.user.name, post.user %></span>
  </div>
  <div class="content-photo">
    <%= image_tag post.photo.url if post.photo? %>
  </div>
  <div class="content-like">
    <% if post.likes.pluck(:user_id).include?(current_user.id) %> <!-- n+1回避 -->
      <!-- ここから要リファクタリング -->
      <% like_id = post.likes.find_by(user_id: current_user.id).id %>
      <%= button_to post_like_path(id: like_id, post_id: post.id), method: :delete,
                                  class: "like-button", remote: true do %>
        <%= image_tag("heart_on.svg", width: 20, height: 20) %>
        <span><%= post.likes_count %></span>
      <% end %>
      <!-- ここまで要リファクタリング -->
    <% else %>
      <%= button_to post_likes_path(post_id: post.id), method: :post,
                                  class: "like-button", remote: true do %>
        <%= image_tag("heart_off.svg", width: 20, height: 20) %>
        <span><%= post.likes_count %></span>
      <% end %>
    <% end %>



  </div>
  <div class="content-text">
    <%= post.content %>
  </div>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
    <% if current_user?(post.user) %>
      <%= link_to "編集", edit_post_path(post) %> |
      <%= link_to "削除", post, method: :delete,
                    data: { confirm: "削除してよろしいですか？" } %>
    <% end %>
  </span>
</li>
